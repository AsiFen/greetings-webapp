<div class="greet_user">
    <form action="/greetings" method="POST">

        <div class="flex flex-col justify-center items-center">
            <p class="text-purple-700 text-4xl py-6">Greet Me Widget!</p>
            <div class="">
                <label class="block text-gray-700 text-md mb-2" for="username">
                    Enter Your Name:
                </label>
                <input type="text" name="nameInput"
                    class="shadow border rounded w-full py-2 px-3 text-gray-700 focus:outline-none focus:shadow-outline mb-4">

                <div class="px-7 justify-center mb-4">
                    <label class="text-gray-700 text-md mb-2 hover:text-gray-100" for="english">english</label>
                    <input type="radio" name="language" class="langauges" value="english">
                    <label class="text-gray-700 text-md mb-2 hover:text-gray-100" for="isiXhosa">isiXhosa</label>
                    <input type="radio" name="language" class="langauges" value="isiXhosa">
                    <label class="text-gray-700 text-md mb-2 hover:text-gray-100" for="isiTsonga">swaHili</label>
                    <input type="radio" name="language" class="langauges" value="swahili">
                </div>

                <div class="grid justify-center mb-4">
                    <button
                        class="shadow bg-purple-600 hover:bg-red-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                        type="submit"> Greet Me! </button>
                </div>

                <div class="greet_display text-center py-4 px-4 mb-4 bg-purple-200">
                    <span>{{theGreeting}}</span>
                </div>
            </div>
            <div class="text-4xl bg-gradient-to-r from-purple-300 via-pink-500 p-4 rounded">
                <span>
                    {{counter}}
                </span>
            </div>

            <div class="message_display">
                <span>{{error_messages}}</span>
            </div>
        </div>
    </form>
</div>

<div> 
<a href="/greeted" class="greeted_names"> Greeted Names<span class="finger"> .....</span></a>
</div>

</div>